using Gtk 4.0;
using Adw 1;

Adw.StatusPage {
  title: "File Dialog";
  description: _("It collects the arguments that are needed to present a file chooser dialog to the user");

  Box {
    orientation: vertical;
    spacing: 18;

    Label {
      label: _("Modes :");
      styles ["title-3"]
    }

    DropDown select_mode {
      halign: center;
      model: StringList {
        strings ["Select File", "Select File (Folder pre-defined)", "Select Multiple Files", "Select Folder", "Select Multiple Folders", "Save File"]
      };
    }

    Button button {
      halign: center;
      label: _("Trigger");
      styles ["pill", "suggested-action"]
    }
    LinkButton {
      label: _("API Reference");
      uri: "https://docs.gtk.org/gtk4/class.FileDialog.html";
    }
  }
}

